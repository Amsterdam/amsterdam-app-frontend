{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/storybook/*": [".storybook/*"],
      "@/*": ["src/*"]
    },
    "incremental": true,
    "tsBuildInfoFile": "tsconfig.tsbuildinfo",
    "types": ["jest", "node", "react-native"],
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "include": [
    "src",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    "__tests__/",
    "eslint-plugin-amsterdam",
    "react-native-block-screenshot",
    "react-native-salesforce-messaging-in-app",
    "*.ts"
  ],
  "extends": "@react-native/typescript-config/tsconfig.json"
}
