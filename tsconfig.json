{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/storybook/*": [
        ".storybook/*"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "incremental": true,
    "tsBuildInfoFile": "tsconfig.tsbuildinfo",
    "types": [
      "jest",
      "node",
      "react-native"
    ]
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "include": [
    "src",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    "__tests__/",
    "eslint-plugin-amsterdam"
  ],
  "extends": "@tsconfig/react-native/tsconfig.json"
}